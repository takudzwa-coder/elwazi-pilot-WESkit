[flake8]
max-line-length=100
max-complexity=10
max-cognitive-complexity=10
exclude =
    .idea,
    .pytest_cache,
    .snakemake,
    API_demo,
    config,
    test-data,
    tmp,
    workflows,
    .dockerignore,
    .git*,
    Dockerfile,
    *.yaml,
    *.json,
    *.tar.gz,
    .editorconfig,
    uWSGI_Server/certs,
    .coverage,
    testfile
