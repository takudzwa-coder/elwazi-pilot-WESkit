rule all:
    input:
        file="hello_world.txt"

rule step1:
    output:
        file="hello_world.txt"
    params:
        text=config["text"],
        duration=config["duration"]
    shell:
        """
        sleep {params.duration}; echo {params.text} > {output.file}
        """